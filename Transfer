from fastapi import FastAPI, Request
from fastapi.middleware.cors import CORSMiddleware
from langchain_core.messages import SystemMessage, HumanMessage
from WiproLLM import WiproChatModel  # assuming this is the client
import os

app = FastAPI()

# Allow requests from frontend
app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],  # Or restrict to your React app
    allow_methods=["*"],
    allow_headers=["*"],
)

# Initialize Wipro Chat Model
client = ...  # Your Wipro client or API key setup
chat = WiproChatModel(client=client, model_name="gpt-4o-mini")

@app.post("/agent")
async def ask_agent(request: Request):
    data = await request.json()
    user_input = data.get("message", "")

    try:
        # Wrap in message structure
        system_message = "You are a helpful AI assistant."
        human_message = user_input

        messages = [
            SystemMessage(content=system_message),
            HumanMessage(content=human_message)
        ]

        # Invoke the model
        response = chat.invoke(messages)
        return {"response": response.content}

    except Exception as e:
        return {"response": f"‚ùå Agent Error: {str(e)}"}
