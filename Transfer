import React, { useState } from 'react';
import axios from 'axios';

function App() {
  const [product, setProduct] = useState('');
  const [description, setDescription] = useState('');
  const [output, setOutput] = useState('');
  const [loading, setLoading] = useState(false);

  const generateTagline = async () => {
    setLoading(true);
    try {
      const res = await axios.post('http://localhost:8000/agent', {
        product,
        description,
      });
      setOutput(res.data.response);
    } catch (e) {
      setOutput("Error occurred.");
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="max-w-xl mx-auto p-6">
      <h1 className="text-2xl font-bold mb-4">Marketing Tagline Generator</h1>

      <div className="mb-4">
        <label className="block font-medium">Product Name</label>
        <input
          className="w-full p-2 border rounded"
          value={product}
          onChange={(e) => setProduct(e.target.value)}
          placeholder="e.g., EcoBottle"
        />
      </div>

      <div className="mb-4">
        <label className="block font-medium">Description</label>
        <textarea
          className="w-full p-2 border rounded"
          value={description}
          onChange={(e) => setDescription(e.target.value)}
          placeholder="A reusable, eco-friendly water bottle made from bamboo and steel."
        />
      </div>

      <button
        className="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700"
        onClick={generateTagline}
        disabled={loading}
      >
        {loading ? "Generating..." : "Generate Tagline"}
      </button>

      {output && (
        <div className="mt-6 p-4 bg-gray-100 rounded border">
          <h2 className="font-semibold mb-2">Generated Tagline:</h2>
          <p>{output}</p>
        </div>
      )}
    </div>
  );
}

export default App;
