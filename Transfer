import { CopilotRuntime, HttpAgent } from "@copilotkit/runtime";

export const runtime = new CopilotRuntime({
  agents: {
    custom: new HttpAgent({
      url: "http://localhost:8000/copilotkit_remote",
    }),
  },
});


import React from "react";
import ReactDOM from "react-dom/client";
import App from "./App";
import { CopilotKit } from "@copilotkit/react-core";
import { runtime } from "./copilotRuntime";
import "@copilotkit/react-ui/styles.css";

ReactDOM.createRoot(document.getElementById("root")!).render(
  <React.StrictMode>
    <CopilotKit runtime={runtime} agent="custom">
      <App />
    </CopilotKit>
  </React.StrictMode>
);

import { CopilotChat } from "@copilotkit/react-ui";

function App() {
  return (
    <div style={{ padding: "2rem" }}>
      <h1>AG UI PoC - React + FastAPI + Custom LLM</h1>
      <CopilotChat
        labels={{
          title: "Custom AI Agent",
          initial: "Ask me anything...",
        }}
      />
    </div>
  );
}

export default App;


import { defineConfig } from "vite";
import react from "@vitejs/plugin-react";

export default defineConfig({
  plugins: [react()],
  server: {
    port: 5173,
  },
});
